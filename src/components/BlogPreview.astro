---
import type { CollectionEntry } from 'astro:content';

type Props = {
  frontMatter: CollectionEntry<'blog'>;
};

const { frontMatter } = Astro.props;

//* Build the date strings from the raw yyyy-MM-dd input from the front matter
const formattedDate = frontMatter.data.date.toLocaleDateString();
const href = `/blog/${frontMatter.slug}`;
---

<div>
  <p class="text-sm text-gray-400">
    <time datetime={formattedDate}>{formattedDate}</time>
  </p>
  <a href={href} class="mt-2 block">
    <p class="text-xl font-semibold text-gray-300">
      {frontMatter.data.title}
    </p>
    <p class="mt-3 text-base text-gray-400">
      {frontMatter.data.summary}
    </p>
  </a>
  <div class="mt-3">
    <a
      href={href}
      class="text-base font-semibold text-gray-400 hover:text-gray-300 flex flex-row items-center gap-x-1"
      >Read <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 20 20"
        fill="currentColor"
        class="w-5 h-5"
      >
        <path
          fill-rule="evenodd"
          d="M5 10a.75.75 0 01.75-.75h6.638L10.23 7.29a.75.75 0 111.04-1.08l3.5 3.25a.75.75 0 010 1.08l-3.5 3.25a.75.75 0 11-1.04-1.08l2.158-1.96H5.75A.75.75 0 015 10z"
          clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>
</div>
